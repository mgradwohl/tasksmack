{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug TaskSmack (Debug)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/TaskSmack",
            "windows": {
                "program": "${workspaceFolder}/build/win-debug/TaskSmack.exe"
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "CMake: Build Debug",
            "terminal": "integrated",
            "presentation": {
                "group": "debug",
                "order": 1
            }
        },
        {
            "name": "Debug TaskSmack (RelWithDebInfo)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/relwithdebinfo/TaskSmack",
            "windows": {
                "program": "${workspaceFolder}/build/win-relwithdebinfo/TaskSmack.exe"
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "CMake: Build RelWithDebInfo",
            "terminal": "integrated",
            "presentation": {
                "group": "debug",
                "order": 2
            }
        },
        {
            "name": "Run TaskSmack (Release)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/release/TaskSmack",
            "windows": {
                "program": "${workspaceFolder}/build/win-release/TaskSmack.exe"
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "CMake: Build Release",
            "terminal": "integrated",
            "noDebug": true,
            "presentation": {
                "group": "run",
                "order": 1
            }
        },
        {
            "name": "Run TaskSmack (Optimized)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/optimized/TaskSmack",
            "windows": {
                "program": "${workspaceFolder}/build/win-optimized/TaskSmack.exe"
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "CMake: Build Optimized",
            "terminal": "integrated",
            "noDebug": true,
            "presentation": {
                "group": "run",
                "order": 2
            }
        },
        {
            "name": "Debug TaskSmack (ASan+UBSan) [Linux]",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/asan-ubsan/TaskSmack",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "CMake: Build ASan+UBSan (Linux)",
            "terminal": "integrated",
            "env": {
                "ASAN_OPTIONS": "detect_leaks=1:halt_on_error=0",
                "UBSAN_OPTIONS": "print_stacktrace=1"
            },
            "presentation": {
                "group": "sanitizers",
                "order": 1
            }
        },
        {
            "name": "Debug TaskSmack (TSan) [Linux]",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/tsan/TaskSmack",
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "CMake: Build TSan (Linux)",
            "terminal": "integrated",
            "env": {
                "TSAN_OPTIONS": "halt_on_error=0"
            },
            "presentation": {
                "group": "sanitizers",
                "order": 2
            }
        }
    ]
}
